<h1>Shrinky Link</h1>
<p>Get a shortlink by Shrinky Link from a long URL</p>

<%= @short_url.link %>
<h3>Add a new URL</h3>
<%= form_for @short_url do |f| %>

  <p>
    <%= f.label :link, "Your URL:" %>
    <%= f.text_field :link %>
  </p>

  <% if @short_url.errors[:link].any? %>
    <p class='error-messages'>
      The given url <%= @short_url.errors[:link].to_sentence %>.
    </p>
  <% end %>

  <p class='buttons'>
    <%= f.submit "Shorten my URL" %>
  </p>

<% end %>